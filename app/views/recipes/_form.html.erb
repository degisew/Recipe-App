<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="recipe-form-fields">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="recipe-form-fields">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.text_field :preparation_time %>
  </div>

  <div class="recipe-form-fields">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.text_field :cooking_time %>
  </div>

  <div class="recipe-form-fields">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, style: "min-height: 100px; min-width: 400px" %>
  </div>

  <div class="recipe-form-fields">
    <%= form.label :public, style: "display: block" %>
    <%= form.select :public , [["Yes", true], ["No", false] ], selected: true  %>
  </div>

  <div class='create-recipe-btn'>
    <%= form.submit %>
  </div>
<% end %>
