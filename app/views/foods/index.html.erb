<div id="foods">
  <%= link_to "Add New food", new_food_path, class: 'add-food-link'%>
  <table>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit price</th>
      <th scope="col">Action</th>
    </tr>
    <% @foods.each do |food| %>
      <%= render food %>
    <% end %>
  </table>
</div>
