<div id="<%= dom_id food %>">
  <tbody>
  <tr scope="row">
    <td><%= food.name%></td>
    <td><%= food.measurement_unit%></td>
    <td><%= food.price%></td>
    <td><%= button_to 'Delete', food, method: :delete, data: { turbo_confirm: "Are you sure?"}, class: "delete-food-btn"%></td>
  </tr>
  </tbody>
</div>
